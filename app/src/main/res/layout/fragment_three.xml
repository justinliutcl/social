<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.justin.social.model.tab.ThreeModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_black_back"
        >

        <RelativeLayout
            android:id="@+id/backview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/title_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="缴费"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="客服"
                android:textColor="@color/white"
                android:padding="5dp"
                android:onClick="onServicePeopleClick"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_right_news" />
        </RelativeLayout>
        <com.justin.social.views.LinearRecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_black_back"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"
            android:layout_below="@+id/backview"
            >

        </com.justin.social.views.LinearRecyclerView>

    </RelativeLayout>

</layout>
